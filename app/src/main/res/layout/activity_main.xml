<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundfade"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnAtm"
        android:layout_width="380dp"
        android:layout_height="100dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/white"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/btnVal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnVal"
        android:layout_width="380dp"
        android:layout_height="100dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/white"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/btnEnter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="helvetica"
        android:text="WordSkills Bank"
        android:textColor="#9B59B6"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/btnAtm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        app:layout_constraintBottom_toTopOf="@+id/btnAtm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon" />

    <Button
        android:id="@+id/btnEnter"
        android:layout_width="380dp"
        android:layout_height="100dp"
        android:layout_marginBottom="100dp"
        android:text="Войти"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="42dp"
        android:layout_height="34dp"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnVal"
        app:layout_constraintEnd_toStartOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/btnVal"
        app:layout_constraintTop_toTopOf="@+id/btnVal"
        app:layout_constraintVertical_bias="0.287"
        app:srcCompat="@drawable/icondollar" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:elevation="4dp"
        android:text="Курсы валют"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnVal"
        app:layout_constraintStart_toStartOf="@+id/btnVal"
        app:layout_constraintTop_toTopOf="@+id/btnVal"
        app:layout_constraintVertical_bias="0.25" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:elevation="4dp"
        android:text="Отделения и банкоматы"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnAtm"
        app:layout_constraintStart_toStartOf="@+id/btnAtm"
        app:layout_constraintTop_toTopOf="@+id/btnAtm"
        app:layout_constraintVertical_bias="0.473" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="8dp"
        android:elevation="4dp"
        android:text="USD"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/btnVal"
        app:layout_constraintStart_toStartOf="@+id/btnVal"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.566" />

    <TextView
        android:id="@+id/tvDollar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnVal"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.657"
        android:text="69" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:elevation="4dp"
        android:text="EUR"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/btnVal"
        app:layout_constraintEnd_toEndOf="@+id/btnVal"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.657" />

    <TextView
        android:id="@+id/tvEuro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:elevation="4dp"
        android:text="70"
        app:layout_constraintBottom_toBottomOf="@+id/btnVal"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.657" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnVal"
        app:layout_constraintEnd_toEndOf="@+id/btnVal"
        app:layout_constraintHorizontal_bias="0.871"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/btnVal"
        app:layout_constraintVertical_bias="0.296"
        android:text="10.03.2021" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnAtm"
        app:layout_constraintEnd_toStartOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/btnAtm"
        app:layout_constraintTop_toTopOf="@+id/btnAtm"
        app:srcCompat="@drawable/iconnail" />
</androidx.constraintlayout.widget.ConstraintLayout>